check process <%= @name %>
   with pidfile <%= @pidfile %>
   group <%= @group %>
   start program = "<%= @init_d_file %> start"
   stop program = "<%= @init_d_file %> stop"
   <% if @bind %>
   if failed host <%= @bind %> port <%= @port %> then restart
   <% end %>
   if 5 restarts within 5 cycles then timeout
